<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_sheet">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/eventLogo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_margin="20dp"
        android:src="@drawable/gdglogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/bottom_sheet_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserratmedium"
        android:text="Date"
        android:textColor="@color/MainHeadingText"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eventLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_bottom_Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/montserratmedium"
        android:text="EventTitle"
        android:textColor="@color/MainHeadingText"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/bottom_sheet_date"
        app:layout_constraintStart_toEndOf="@+id/eventLogo"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_date" />

</androidx.constraintlayout.widget.ConstraintLayout>