<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.settings.connection.connection">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/CardViewTransparent"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/IpAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview"
            android:hint="LG Ip Address : Port"
            android:padding="20dp"
            android:textAlignment="viewStart"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/MainHeadingText"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.card.MaterialCardView>

    <!--    <EditText-->
    <!--        android:id="@+id/PortEdittext"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:hint="Port"-->
    <!--        android:textSize="30dp"-->
    <!--        android:layout_marginTop="40dp"-->
    <!--        android:textAlignment="viewStart"-->
    <!--        android:layout_marginStart="20dp"-->
    <!--        android:layout_marginEnd="20dp"-->
    <!--        android:padding="20dp"-->
    <!--        android:background="@drawable/cardview"-->
    <!--        />-->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView1"
        tools:layout_editor_absoluteX="20dp">

        <EditText
            android:id="@+id/LgNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview"
            android:backgroundTint="@color/CardViewTransparent"
            android:hint="LG Name"
            android:fontFamily="@font/poppins_medium"
            android:padding="20dp"
            android:textAlignment="viewStart"
            android:textColor="@color/MainHeadingText"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView2">

        <EditText
            android:id="@+id/LgPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview"
            android:backgroundTint="@color/CardViewTransparent"
            android:hint="LG Password"
            android:padding="20dp"
            android:password="true"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="viewStart"
            android:textColor="@color/MainHeadingText"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="375dp" />
    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ConnectLGButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/cardview"
        android:backgroundTint="@color/ButtonColor"
        android:padding="20dp"
        android:text="Connect"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttTryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/cardview"
        android:backgroundTint="@color/ButtonColor"
        android:padding="20dp"
        android:text="Try Again"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView3" />

    <TextView
        android:id="@+id/ConnectingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/cardview"
        android:backgroundTint="@color/ButtonColor"
        android:padding="20dp"
        android:text="Connecting.."
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/CleanKMLs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/cardview"
        android:backgroundTint="@color/ButtonColor"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/white"
        android:padding="10dp"
        android:text="Clean Kml"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttTryAgain" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/RebootLg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/cardview"
        android:backgroundTint="@color/ButtonColor"
        android:fontFamily="@font/poppins_medium"
        android:padding="10dp"
        android:text="Reboot LG"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/CleanKMLs"
        app:layout_constraintStart_toEndOf="@+id/CleanKMLs" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/PowerOffLg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/cardview"
        android:backgroundTint="@color/ButtonColor"
        android:fontFamily="@font/poppins_medium"
        android:padding="10dp"
        android:text="PowerOff LG"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/RebootLg"
        app:layout_constraintStart_toEndOf="@+id/RebootLg" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SetRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/cardview"
        android:backgroundTint="@color/ButtonColor"
        android:fontFamily="@font/poppins_medium"
        android:padding="10dp"
        android:text="Set Refresh"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/PowerOffLg"
        app:layout_constraintStart_toEndOf="@+id/PowerOffLg" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ResetRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/cardview"
        android:backgroundTint="@color/ButtonColor"
        android:fontFamily="@font/montserratmedium"
        android:padding="10dp"
        android:text="ReSet Refresh"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/SetRefresh"
        app:layout_constraintStart_toEndOf="@+id/SetRefresh" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/CleanLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/cardview"
        android:backgroundTint="@color/CardViewTransparent"
        android:fontFamily="@font/poppins_medium"
        android:padding="10dp"
        android:text="Clean Logo"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ResetRefresh"
        app:layout_constraintStart_toEndOf="@+id/ResetRefresh" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/RelaunchLg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/cardview"
        android:backgroundTint="@color/ButtonColor"
        android:fontFamily="@font/montserratmedium"
        android:padding="10dp"
        android:text="Relaunch LG"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/ResetRefresh"
        app:layout_constraintStart_toEndOf="@+id/ResetRefresh" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SaveKml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/cardview"
        android:backgroundTint="@color/ButtonColor"
        android:fontFamily="@font/poppins_medium"
        android:padding="10dp"
        android:text="Save KML"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/CleanLogo"
        app:layout_constraintStart_toEndOf="@+id/RelaunchLg" />


</androidx.constraintlayout.widget.ConstraintLayout>

